#include <bits/stdc++.h>
using namespace std;

//----------------------------------------
// 75. Sort Colors (Dutch National Flag)
//----------------------------------------
class Solution_SortColors {
public:
    void sortColors(vector<int>& nums) {
        int low = 0, mid = 0, high = nums.size() - 1;
        while (mid <= high) {
            if (nums[mid] == 0) {
                swap(nums[low++], nums[mid++]);
            } else if (nums[mid] == 1) {
                mid++;
            } else {
                swap(nums[mid], nums[high--]);
            }
        }
    }
};

//----------------------------------------
// 179. Largest Number
//----------------------------------------
class Solution_LargestNumber {
public:
    string largestNumber(vector<int>& nums) {
        vector<string> arr;
        for (int n : nums) arr.push_back(to_string(n));
        sort(arr.begin(), arr.end(), [](string &a, string &b) {
            return a + b > b + a;
        });
        if (arr[0] == "0") return "0"; // handle all zero case
        string result;
        for (auto &s : arr) result += s;
        return result;
    }
};

//----------------------------------------
// 324. Wiggle Sort II
//----------------------------------------
class Solution_WiggleSort {
public:
    void wiggleSort(vector<int>& nums) {
        vector<int> sorted = nums;
        sort(sorted.begin(), sorted.end());
        int n = nums.size();
        int mid = (n + 1) / 2;
        int j = mid - 1;
        int k = n - 1;
        for (int i = 0; i < n; i++) {
            if (i % 2 == 0) nums[i] = sorted[j--];
            else nums[i] = sorted[k--];
        }
    }
};

//----------------------------------------
// Example main to test locally
//----------------------------------------
int main() {
    // 75 Test
    Solution_SortColors s1;
    vector<int> nums1 = {2,0,2,1,1,0};
    s1.sortColors(nums1);
    cout << "Sort Colors Result: ";
    for (int x : nums1) cout << x << " ";
    cout << endl;

    // 179 Test
    Solution_LargestNumber s2;
    vector<int> nums2 = {3,30,34,5,9};
    cout << "Largest Number Result: " << s2.largestNumber(nums2) << endl;

    // 324 Test
    Solution_WiggleSort s3;
    vector<int> nums3 = {1,5,1,1,6,4};
    s3.wiggleSort(nums3);
    cout << "Wiggle Sort Result: ";
    for (int x : nums3) cout << x << " ";
    cout << endl;

    return 0;
}
